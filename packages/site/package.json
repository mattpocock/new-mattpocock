{
  "name": "site",
  "version": "0.0.1",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "serve": "remix-serve api/index.js",
    "build": "remix build && npm run cp-content",
    "build:css": "tailwindcss -o ./app/tailwind.css",
    "cp-content": "cp -r ./content api/content",
    "dev": "remix dev",
    "dev:css": "tailwindcss -o ./app/tailwind.css --watch"
  },
  "dependencies": {
    "@remix-run/node": "^1.6.7",
    "@remix-run/react": "^1.6.7",
    "@remix-run/vercel": "^1.6.7",
    "@vercel/node": "^2.4.4",
    "dayjs": "^1.11.3",
    "front-matter": "^4.0.2",
    "hast-util-to-html": "^8.0.3",
    "mdast-util-to-hast": "^12.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remark": "^14.0.2",
    "remark-shiki-twoslash": "^3.0.9",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.7",
    "@remix-run/eslint-config": "^1.6.7",
    "@remix-run/serve": "^1.6.7",
    "@tailwindcss/typography": "^0.5.0",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "eslint": "^8.20.0",
    "postcss": "^8.4.5",
    "tailwindcss": "3.1.4",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
}
