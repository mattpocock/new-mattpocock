{
  "name": "site",
  "version": "0.0.1",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "serve": "remix-serve api/index.js",
    "build": "remix build",
    "build:css": "tailwindcss -o ./app/tailwind.css",
