    "dayjs": "^1.11.3",
    "front-matter": "^4.0.2",
    "hast-util-to-html": "^8.0.3",
    "mdast-util-to-hast": "^12.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remark": "^14.0.2",
    "remark-shiki-twoslash": "^3.0.9",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.7",
    "@remix-run/eslint-config": "^1.6.7",
    "@remix-run/serve": "^1.6.7",
    "@tailwindcss/typography": "^0.5.0",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
